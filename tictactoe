def whowon():
    if r1==['x','x','x'] :
        print('the winner is player1')
        return True
    elif r2==['x','x','x']:
        print('the winner is player1')
        return True
    elif r3==['x','x','x']:
        print('the winner is player1')
        return True
    elif r1[0]==r2[0]==r3[0]=='x':
        print('the winner is player1')
        return True
    elif r1[1]==r2[1]==r3[1]=='x':
        print('the winner is player1')
        return True
    elif r1[2] == r2[2] == r3[2]=='x':
        print('the winner is player1')
        return True
    elif r1[0]==r2[1]==r3[2]=='x':
        print('the winner is player1')
        return True
    elif r1[2]==r2[1]==r3[0]=='x':
        print('thw winner is player1')
        return True
    elif r1==['o','o','o'] :
        print('the winner is player2')
        return True
    elif r2==['o','o','o']:
        print('the winner is player2')
        return True
    elif r3==['o','o','o']:
        print('the winner is player2')
        return True
    elif r1[0]==r2[0]==r3[0]=='o':
        print('the winner is player2')
        return True
    elif r1[1]==r2[1]==r3[1]=='o':
        print('the winner is player2')
        return True
    elif r1[2] == r2[2] == r3[2]=='o':
        print('the winner is player2')
        return True
    elif r1[0]==r2[1]==r3[2]=='o':
        print('the winner is player2')
        return True
    elif r1[2]==r2[1]==r3[0]=='o':
        print('the winner is player2')
        return True
    elif len(plyer1choices)==5:
        print('its a draw')
        return True
    else:
        return False

while not whowon() :
    whowon()
    choice1=player1in()
    plyer1choices.append(choice1)
    bigtable(choice1)
    for letter in [a, b, c, d, e, f, g, h, i, j, k, l, m, n, o, p, q, r]:
        print(letter)
        if whowon():
            continue
    choice2=player2in()
    plyer2choices.append(choice2)
    bigtable('',choice2)
    smtable(choice1, choice2)
    for letter in [a, b, c, d, e, f, g, h, i, j, k, l, m, n, o, p, q, r]:
        print(letter)










