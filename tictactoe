for letter in [a,b,c,d,e,f,g,h,i,g,k,l,m,n,o,p,q,r]:
    print(letter)
def smtable(A='',B=''):
    if A == 1:
        r1[0]= 'x'
    if A == 2:
        r1[1]= 'x'
    if A == 3:
        r1[2]= 'x'
    if A == 4:
        r2[0]= 'x'
    if A == 5:
        r2[1]= 'x'
    if A == 6:
        r2[2]= 'x'
    if A == 7:
        r3[0]= 'x'
    if A == 8:
        r3[1]= 'x'
    if A == 9:
        r3[2]= 'x'
    if B == 1:
        r1[0]= 'o'
    if B == 2:
        r1[1] ='o'
    if B == 3:
        r1[2]= 'o'
    if B == 4:
        r2[0]= 'o'
    if B == 5:
        r2[1]= 'o'
    if B == 6:
        r2[2]= 'o'
    if B == 7:
        r3[0]='o'
    if B == 8:
        r3[1]='o'
    if B == 9:
        r3[2]= 'o'

def bigtable(A="",B=""):
    if A == 1:
