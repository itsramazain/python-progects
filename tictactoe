r1 = [' ', ' ', '  ']
r2 = [' ', ' ', ' ']
r3 = [' ', ' ', ' ']
def smatlbe(A, B):
    if A == 1:
        r1[0]= 'x'
    if A == 2:
        r1[1]= 'x'
    if A == 3:
        r1[2]= 'x'
    if A == 4:
        r2[0]= 'x'
    if A == 5:
        r2[1]= 'x'
    if A == 6:
        r2[2]= 'x'
    if A == 7:
        r3[0]= 'x'
    if A == 8:
        r3[1]= 'x'
    if A == 9:
        r3[2]= 'x'
    if B == 1:
        r1[0]= 'o'
    if B == 2:
        r1[1] ='o'
    if B == 3:
        r1[2]= 'o'
    if B == 4:
        r2[0]= 'o'
    if B == 5:
        r2[1]= 'o'
    if B == 6:
        r2[2]= 'o'
    if B == 7:
        r3[0]='o'
    if B == 8:
        r3[1]='o'
    if B == 9:
        r3[2]= 'o'
    if r1==['x','x','x'] :
        print('the winner is player1')
        return True
    elif r2==['x','x','x']:
        print('the winner is player1')
        return True
    elif r3==['x','x','x']:
        print('the winner is player1')
        return True
    elif r1[0]==r2[0]==r3[0]=='x':
        print('the winner is player1')
        return True
    elif r1[1]==r2[1]==r3[1]=='x':
        print('the winner is player1')
        return True
    elif r1[2] == r2[2] == r3[2]=='x':
        print('the winner is player1')
        return True
    elif r1[0]==r2[1]==r3[2]=='x':
        print('the winner is player1')
        return True
    elif r1[2]==r2[1]==r3[0]=='x':
        print('thw winner is player1')
        return True
    elif r1==['o','o','o'] :
        print('the winner is player2')
        return True
    elif r2==['o','o','o']:
        print('the winner is player2')
        return True
    elif r3==['o','o','o']:
        print('the winner is player2')
        return True
    elif r1[0]==r2[0]==r3[0]=='o':
        print('the winner is player2')
        return True
    elif r1[1]==r2[1]==r3[1]=='o':
        print('the winner is player2')
        return True
    elif r1[2] == r2[2] == r3[2]=='o':
        print('the winner is player2')
        return True
    elif r1[0]==r2[1]==r3[2]=='o':
        print('the winner is player2')
        return True
    elif r1[2]==r2[1]==r3[0]=='o':
        print('the winner is player2')
        return True
    elif len(num1)==5:
        print('its a draw')
        return True
    else:
        return False

